{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es2015"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": false,
		"target": "es5",
		"outDir": "build/cloud",
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"src/**/*.spec.ts",
		"src/**/__tests__/*.ts"
	],
	"compileOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	},
}